/* pages/journey/journey.wxss */
.container{
  margin-top: 5px;
  width: 100%;
}

.card{
  display: flex;
  width:300px;
  margin-left: 5px;
  margin-right: 5px;
  margin-top: 20px;
  height: 60px;
  border-radius: 10px;
  border-color: white;
  box-shadow: 0rpx 0rpx 15rpx 0rpx;
  background-color: white;
  color: gray;
  font-size: 14px;
  align-items: center;
  justify-content: center;
}
.row{
  display: flex;
  width: 100%;
  align-items: center;
  
  /*background-color: blue;*/
}

.title{
  font-size: 14px;
  width: 100%;
  margin-left: 15px;
  /*background-color: red;*/
  vertical-align: middle;
}

.miniTitle{
  font-size: 12px;
  color:grey;
  min-width: max-content;
  font-size: small;
  margin-left: 10px;
}
.miniNavigator{
  width: 100%;
  text-align: right;
  margin-right: 10px;
  font-size: small;
  color:dodgerblue;
  margin-block-end: 5px;
}

navigation-bar{
  border-radius: 10px;
  width: 300px;
  height: 40px;
  margin-top: 10px;
  background-color: white;
}
image{
  min-width: 27px;
  width: 27px;
  height:36px;
  margin-left: 10px;
}